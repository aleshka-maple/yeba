{
    "name": "mercenary",
    "version": "1.0.0",
    "description": "mercenary game",
    "scripts": {
        "start": "npm run webpack --watch --progress",
        "webpack": "node --max-old-space-size=4096 node_modules/webpack/bin/webpack.js",
        "build:vendors": "webpack --config ./webpack/dll/vendors/dll.config.js",
        "lint:ts": "tslint -c tslint.json",
        "lint:style": "stylelint",
        "lint:json": "jsonlint-cli",
        "lint:staged": "lint-staged"
    },
    "lint-staged": {
        "concurrent": true,
        "chunkSize": 50,
        "linters": {
            "src/**/*.{ts,tsx}": "lint:ts",
            "src/styles/**/*.{css,less}": "lint:style",
            "src/assets/**/*.json": "lint:json"
        }
    },
    "author": "AK",
    "license": "MIT",
    "devDependencies": {
        "@types/chrome": "0.0.71",
        "@types/react": "16.0.38",
        "@types/react-dom": "16.0.4",
        "copy-webpack-plugin": "4.4.2",
        "css-loader": "0.28.10",
        "html-webpack-plugin": "3.0.3",
        "less": "3.0.1",
        "less-loader": "4.0.6",
        "lint-staged": "7.0.0",
        "style-loader": "0.20.2",
        "stylelint": "9.1.1",
        "ts-loader": "3.5.0",
        "tslint": "5.9.1",
        "typescript": "2.7.2",
        "webpack": "3.11.0",
        "webpack-dev-server": "3.1.0"
    },
    "dependencies": {
        "lodash": "4.17.5",
        "react": "16.2.0",
        "react-dom": "16.2.0"
    }
}
